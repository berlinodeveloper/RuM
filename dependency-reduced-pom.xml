<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.thesis</groupId>
  <artifactId>rum</artifactId>
  <version>0.6.10-minified</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>theFirst.RumLauncher</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.4</version>
        <configuration>
          <mainClass>theFirst.RumLauncher</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>local-mvn-repo</id>
      <url>file://${project.basedir}/local-mvn-repo</url>
    </repository>
    <repository>
      <id>des-releases-public</id>
      <name>denkbares Public Releases Repository</name>
      <url>https://repo.denkbares.com/releases-public/</url>
    </repository>
  </repositories>
  <properties>
    <maven.compiler.target>11</maven.compiler.target>
    <javafx.includePathExceptionsInClasspath>true</javafx.includePathExceptionsInClasspath>
    <maven.compiler.source>11</maven.compiler.source>
  </properties>
</project>
